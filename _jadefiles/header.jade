mixin nav-content(home)
  ul
    li: a.btn-me(href="#me") Me
    li: a.btn-work(href="#work") Work
    if home
        li: a.logo.btn-home(href="#work") Home
    li: a.btn-skills(href="#skills") Skills
    li: a.btn-life(href="#life") Life

nav.navbar
    .navbar.header-nav
        +nav-content(true)

